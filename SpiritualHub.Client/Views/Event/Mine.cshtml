@model IEnumerable<EventViewModel>
@{
    ViewBag.Title = "My Events";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

@if (!Model.Any())
{
    <h2 class="text-center">You have no events yet!</h2>
}

<div class="row">
    @foreach (var @event in Model)
    {
        <partial name="_EventPartial" model="@@event" />
    }
</div>