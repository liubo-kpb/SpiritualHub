@model IEnumerable<AuthorViewModel>
@{
    ViewBag.Title = "My Authors";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

@if (!Model.Any())
{
    <h2 class="text-center">You have no authors yet!</h2>
}

<div class="row">
    @foreach (var author in Model)
    {
        <partial name="_AuthorPartial" model="@author" />
    }
</div>