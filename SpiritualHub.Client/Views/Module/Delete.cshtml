@model ModuleFormModel
@{
    ViewBag.Title = "Delete Module";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />
<form asp-action="Delete" method="post">
    <div class="row">
        <div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" disabled="disabled" />
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" disabled="disabled" />
            </div>
            <div class="form-group">
                <input asp-for="CourseId" class="form-control" type="hidden" readonly />
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Delete" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>